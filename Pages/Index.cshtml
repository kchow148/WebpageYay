@page
@using System.Xml.Serialization
@using System.Diagnostics

@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Process[] processes = (Process[])ViewData["ProcessCount"]!;
}

<div class="text-center">
    <h1 class="display-4">Processes running on my computer</h1>
    <table>
        @foreach (var process in processes)
        {
            <tr>
                <td>
                    <a asp-page="/ProcessDetails" asp-route-id="@process.Id">
                        @process.ProcessName
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
